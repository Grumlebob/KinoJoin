@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
<div class="page">

    <main >
        <div class="mb-2 flex items-center justify-between bg-white  w-full p-5 shadow align-middle">
            
            <div class="w-1/3 hidden md:block"> <!-- Empty div for spacing --></div>

            <div class="flex w-1/2 md:w-1/3 md:justify-center">
                <a class="ml-0" href="/" onclick="@(() => { NavigationManager.NavigateTo("/", true); })">
                    <img src="Icons/KinoLogo.svg" alt="kino.dk"/>
                </a>
            </div>

            <div class="flex w-1/2 md:w-1/3 justify-end">
                <AccessControl/>
            </div>
        </div>


        <article class="container mx-auto mb-2 max-w-[1200px] p-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>