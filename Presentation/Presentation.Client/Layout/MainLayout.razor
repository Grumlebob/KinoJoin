    <main >
        <div class="mb-2 flex items-center justify-between bg-gray-50 top-row">
          <div class="w-1/3"> <!-- Empty div for spacing --></div>
          
            <div class="flex w-1/3 justify-center">
                <a class="text-black navbar-brand text-decoration-none" href="/" onclick="@(() => { NavigationManager.NavigateTo("/", true); })"><KinoLogo/></a>
