@*This component shows if showtimes are loading, 
or tell the user that no filters are selected. *@

@if (LoadingShowtimes)
{
    <div class="mt-5">
        <LoadingIndicator Text="Indlæser spilletider"/>
    </div>
}
else if (NoFiltersSelected)
{
    <div class="mt-2 w-fit rounded border p-2 mb-16 md:mb-0">
        <p class="font-bold-">Vælg mindst én biograf, film eller genre.</p>
    </div>
}

@code {
    
    [Parameter]
    public bool LoadingShowtimes { get; set; }
    
    [Parameter]
    public bool NoFiltersSelected { get; set; }

}