    private async Task ShareEvent()
    {
        var data = new
        {
            title = _eventDetails.EventTitle,
            text = _eventDetails.EventDescription ?? "",
            url = _baseUrl + "filling/" + _joinEventId
        };

        await JsRuntime.InvokeVoidAsync("navigator.share", data);
