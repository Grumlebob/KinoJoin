    <p class="text-lg font-semibold text-blue-600 mb-0.5">Bekræft oprettelse</p>
    <div class="mb-4 flex items-center">
        <input id="CanAllShowtimes" type="checkbox" @bind="_hostCanAllShowtimes" class="mr-2"/>
        <label for="CanAllShowtimes" class="text-md">
            @(_hostCanAllShowtimes ? "Jeg kan alle valgte tider" : "Jeg ønsker selv at angive tider hvor jeg kan")
